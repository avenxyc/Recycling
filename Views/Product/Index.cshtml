@model IEnumerable<Recycling.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<form action="@Url.Action("Index","Product")" method="get">
    <input type="search" name="searchTerm" />
    <input type="submit" value="Seach By UPC&Name" />

</form>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UPC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Weight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <th>
            @Html.DisplayFor(modelItem => item.UPC)
        </th>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Weight)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.UPC }) |
            @Html.ActionLink("Details", "Details", new { id=item.UPC }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.UPC })
        </td>
    </tr>
}

</table>
